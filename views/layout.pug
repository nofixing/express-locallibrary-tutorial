    <div class="pos-f-t" id="navbar" style="position: fixed;top: 0;left: 0;width: 100%;display: block;transition: top 0.5s;">
      <div class="collapse" id="navbarToggleExternalContent">
        <div class="bg-dark p-4">
          <ul class="navbar-nav" style="flex-direction:column;padding-left:60px;">
            if user
              li(class='nav-item' style='height:35px;') 
                a.text-white.h4(href='/user/logout') Log Out
            else
              li(class='nav-item' style='height:35px;') 
                a.text-white.h4(href='/user/login') Log In
              li(class='nav-item' style='height:35px;') 
                a.text-white.h4(href='/user/registration') Registration
            li.nav-item.dropdown(style='height:35px;') 
              a#navbarDropdownMenuLink.text-white.h4(href='/user/registration' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false') Main Menu
              div.dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
                a.dropdown-item(href='/catalog/') Home
                a.dropdown-item(href='/catalog/books') All books
                a.dropdown-item(href='/catalog/stories') All stories
                a.dropdown-item(href='/catalog/genres') All genres
                a.dropdown-item(href='/catalog/book/create') Create new book
                a.dropdown-item(href='/catalog/story/create') Create new story
                a.dropdown-item(href='/catalog/genre/create') Create new genre
          </ul>
        </div>
      </div>
      <nav class="navbar navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
