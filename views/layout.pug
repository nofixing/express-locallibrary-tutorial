            li.nav-item
              a.nav-link(href='/catalog/book/create') #{translation.CREATEBOOK}
            li.nav-item
              a.nav-link(href='/catalog/story/create') #{translation.CREATESTORY}
            li.nav-item
              a.nav-link(href='/catalog/genre/create') #{translation.CREATEGENRE}
          li.nav-item.dropdown
              a#lang.nav-link.dropdown-toggle(href='#' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false') #{translation.LANGUAGE}
              div.dropdown-menu(aria-labelledby='lang')
                a.dropdown-item(href='/catalog?clang=en' ) ENGLISH
                a.dropdown-item(href='/catalog?clang=ko' ) 한글
