extends layout

block content
  h1= title

  form(method='POST' action='' id='storyForm' name='storyForm')
    div.form-group.row
      div.col-sm-3
        label(for='book') Book:
        select#book.form-control(type='select', placeholder='Select book' name='book' required='true' )
          for book in books
            if story
              if story.book
                option(value=book._id selected=(book._id.toString()==story.book._id.toString() ? 'selected' : false) ) #{book.title}
              else
                if bok
                  option(value=book._id selected=(book._id.toString()==bok.toString() ? 'selected' : false) ) #{book.title}
                else
                  option(value=book._id) #{book.title}
            else
              if bok
                option(value=book._id selected=(book._id.toString()==bok.toString() ? 'selected' : false) ) #{book.title}
              else
                option(value=book._id) #{book.title}
          if !story
            option(value='') story only
          else
            if !story.book
              option(value='' selected='selected') story only
    div.form-group.row
      div.col-sm-3
        label(for='title') Title:
        input#title.form-control(type='text', placeholder='Name of story' name='title' required='true' value=(undefined===story ? '' : story.title) )
    
    div.form-group.row.boko
      div.col-sm-1
        label(for='order') Order:
        input#order.form-control(type='text', placeholder='Order of story' name='order' required='true' value=(undefined===story ? '' : story.order) )
    
    div.form-group.row.stro
      div.col-sm-2
        label(for='author') Author:
        input#author.form-control(type='text', placeholder='Author of story' name='author' required='true' value=(undefined===story ? '' : story.author) )

    div.form-group.row.stro
      div.col-sm-3
        label(for='reference') Reference:
        input#reference.form-control(type='text', placeholder='Reference of story' name='reference' required='true' value=(undefined===story ? '' : story.reference) )
    
    div.form-group.stro
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', class='gne', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    
    div.form-group.row
      div.col-sm-6
        label(for='Content') Content:
        div#snow-container(spellcheck='false')
        input#content.form-control(type='hidden', name='content' value=(undefined===story ? '' : story.content) )

    button.btn.btn-primary(type='submit', onclick='storyPost();') Submit
    <input type="hidden" id="hostname" name="hostname" value="#{hostname}" />

  if errors 
    ul
      for error in errors
        li!= error.msg

  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
  <script src="/js/quill_setting.js"></script>
  <script src="/js/storyUpdate.js"></script>
