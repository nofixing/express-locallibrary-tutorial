extends layout

block content
	h1(style='margin-top:100px;') #{translation.StoryList}
	<div>
		<form method="post" action="/catalog/story_open_list">
			<div class="form-group row" style="float: right;">
				<input type="text" id="stle" name="stle" class="form-control" style="width:300px; margin-right:10px;"/>
				<button type="submit" class="btn btn-primary" style="margin-right:15px;">#{translation.Search}</button>
			</div>
		</form>
	</div>
	table(class='table table-striped table-hover table-condensed' style='margin-top: 10px;')
		thead
			tr
				th(width='70%') #{translation.Title}
				th(width='10%') #{translation.Writer}
				th(width='10%') #{translation.favs}
				th(width='10%') #{translation.rcnt}
		tbody.wtd
			if story_list
				each story in story_list
					tr
						td
							a(href=story.url+'?open=Y') !{story.title} (#{story.len})
							span(style='margin-left:50px;') #{story.cct}
						td
							if story.user
								span #{story.user.name}
						td
							span #{story.favs}
						td
							span #{story.rcnt}
			else
				tr
					td(colspan='3')
						#{translation.nostories}
	<a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="Click to return on the top page" data-toggle="tooltip" data-placement="left">#{translation.Top}</a>
	<input type="hidden" id="mxcnt" name="mxcnt" value="#{mxcnt}" />
	<input type="hidden" id="ct" name="ct" value="#{ct}" />
	<input type="hidden" id="hostname" name="hostname" value="#{hostname}" />
	<script src="/js/storyOpen.js"></script>		