extends layout

block content

  h1(style='margin-top:100px;') Genre: #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
    each book in genre_books
      dt 
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This genre has no books.

    h4 Stories
    
    dl
    each story in genre_stories
      dt 
        a(href=story.url) #{story.title}

    else
      p This genre has no stories.
      
  hr
  p
    a(href=genre.url+'/delete') Delete genre
  p
    a(href=genre.url+'/update') Update genre