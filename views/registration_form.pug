extends layout

block content
  h1= title

  form(method='POST' action='' id='userForm' name='userForm')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='first and last' name='name')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='name@email.com' name='email')
    div.form-group
      label(for='pw') Password:
      input#pw.form-control(type='password' name='password')
    div.form-group
      label(for='pw2') Confirm Password:
      input#pw2.form-control(type='password' name='confirmPassword')
    <input type="hidden" id="hostname" name="hostname" value="#{hostname}" />
    button.btn.btn-primary(type='submit', onclick='userPost();return false;') Submit
