extends layout

block content

  h1(style='margin-top: 100px;') #{translation.DeleteGenre}: #{genre.name}
  
  if genre_books.length
  
    p(style='strong') #{translation.Deletethefollowingbooks}
  
    div(style='margin-left:20px;margin-top:20px')

      h4 #{translation.BOOK}
    
      dl
      each book in genre_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p #{translation.Doyoureallywanttodelete}
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') #{translation.Delete}