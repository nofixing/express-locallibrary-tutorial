extends layout

block content

  h1 #{title}: #{book.title}
  
  p #[strong Author:] #{book.author}
  p #[strong Summary:] #{book.summary}
  p #[strong Genre:] 
    each val in book.genre
      a(href=val.url) #{val.name}
      |, 

  hr
  
  if stories.length
  
    p #[strong Delete the following stories before attempting to delete this Book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Stories
    
        each story in stories
          p
            a(href=story.url) #{story.title}

  else
    p Do you really want to delete this Book?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete