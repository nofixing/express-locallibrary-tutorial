extends layout

block content
  h1 #{title}: #{book.title}
  
  p #[strong Author:] #{book.author}
  p #[strong Summary:] #{book.summary}
  p #[strong Stories:]
  ul
  for story in stories
    li
      a(href=story.url) !{story.title}
  <br>
  p #[strong Genre:] 
    each val in book.genre
      a(href=val.url) #{val.name}
      |, 
  
  hr
  p
    a(href=book.url+'/delete') Delete Book
  p
    a(href=book.url+'/update') Update Book
  p
    a(href='/catalog/story/create?book='+book._id) Create Story