extends layout

block content
  h1(style='margin-top:100px;') #[strong #{translation.Title}:] #{book.title}
  
  p #[strong #{translation.Author}:] #{book.author}
  p #[strong #{translation.Summary}:] #{book.summary}
  p #[strong #{translation.STORY}:]
  ul.tite
    for story in stories
      li
        a(href=story.url) #{story.chapter} !{story.title} (#{story.len}) &nbsp;&nbsp;&nbsp;&nbsp;
        a(href='/catalog/story/'+story._id+'/download') #{translation.Download}
  <br>
  p #[strong #{translation.Genre}:] 
    each val in book.genre
      a(href=val.url) #{val.name}
      |, 
  
  hr
  p
    a(href=book.url+'/delete') #{translation.DeleteBook}
  p
    a(href=book.url+'/update') #{translation.UpdateBook}
  p
    a(href='/catalog/story/create?book='+book._id) #{translation.CreateStory}
  <script src="https://apis.google.com/js/platform.js?onload=ginit" async defer></script>
