extends layout

block content
  h1(style='margin-top: 100px;') #{translation.AlterPassword}

  if errors 
    span(style='font-size: 1.2em; font-weight: bold; color: red;')!= errors

  form#alterPwForm(method='POST' action='')
    div.form-group.row
      div.col-sm-2
        label(for='email') #{translation.Email}
        input.form-control.form-control-sm(type='text' id='email' placeholder='email' name='email')
    div.form-group.row
      div.col-sm-2
        label(for='password') #{translation.CurrentPassword}
        input.form-control.form-control-sm(type='password' id='password' placeholder='password' name='password')
    div.form-group.row
      div.col-sm-2
        label(for='new_password') #{translation.NewPassword}
        input.form-control.form-control-sm(type='password' id='new_password' placeholder='new password' name='new_password')
    div.form-group.row
      div.col-sm-2
        label(for='new_password2') #{translation.NewPasswordConfirm}
        input.form-control.form-control-sm(type='password' id='new_password2' placeholder='new password confirm' name='new_password2')
    <input type="hidden" id="hostname" name="hostname" value="#{hostname}" />
    <input type="hidden" id="requireField" name="requireField" value="#{translation.requireField}" />
    <input type="hidden" id="notEqualPwCfm" name="notEqualPwCfm" value="#{translation.notEqualPwCfm}" />
    <input type="hidden" id="WrongEP" name="WrongEP" value="#{translation.WrongEP}" />
    <input type="hidden" id="alterPwSuccess" name="alterPwSuccess" value="#{translation.alterPwSuccess}" />
    button#alterPwBtn.btn.btn-primary.btn-sm(type='button') #{translation.Confirm}

  <script src="/js/alterPassword.js"></script>
  <script src="/js/js.platform.js?onload=ginit" async defer></script>
