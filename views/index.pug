extends layout

block content

  if cert == 'OK'
    h1(style='margin-top: 100px;') #{translation.createStorynow}
  else
    h1(style='margin-top: 100px;') #{name}, #{translation.WELCOME_MSG}
    br
    h2 #{translation.Makeyourownstories}
    br
    h2 #{translation.Mycontents}
  
    if error
      p Error getting dynamic content.
    else

      p #{translation.recordcounts}

      ul.tite
        li #[strong Books: ]
          a(href='/catalog/books') !{data.book_count}
        li #[strong Stories: ]
          a(href='/catalog/stories') !{data.story_count}
        li #[strong Genres: ]
          a(href='/catalog/genres') !{data.genre_count}

      p #{translation.firstGenreCreate}
      br
      h2 #{translation.HowToUse}
      ul
        li(style='font-weight: bold;') #{translation.HowToUse2}
        li(style='font-weight: bold;') #{translation.HowToUse3}
        li(style='font-weight: bold;') #{translation.HowToUse4}
        li(style='font-weight: bold;') #{translation.HowToUse5}
        li(style='font-weight: bold;') #{translation.HowToUse6}
        li(style='font-weight: bold;') #{translation.HowToUse7}
        li(style='font-weight: bold;') #{translation.HowToUse8}
        li(style='font-weight: bold;') #{translation.HowToUse9}
        li(style='font-weight: bold; color: blue;') #{translation.browser}
      <input type="hidden" id="cfnt" name="cfnt" value="#{cfnt}" />
    <script src="/js/idx.js"></script>